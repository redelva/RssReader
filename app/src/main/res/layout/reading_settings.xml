<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reading_settings"
    android:orientation="vertical"
    android:background="#6a000000">

    <TextView
        android:text="阅读设置"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#202020"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_alignParentLeft="true"
            android:textColor="#ffffffff"
            android:layout_width="64dp"
            android:layout_height="fill_parent"
            android:text="主题"
            android:textSize="18dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/setting_color_white"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape_white"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView
            android:id="@+id/setting_color_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape_black"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView
            android:id="@+id/setting_color_gray"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape_gray"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView
            android:id="@+id/setting_color_green"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape_green"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView
            android:id="@+id/setting_color_dark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape_dark"
            android:gravity="center"/>

        <View
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:textColor="#ffffffff"
            android:layout_width="64dp"
            android:layout_height="fill_parent"
            android:text="@string/read_setting_font"
            android:textSize="18dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/setting_smallfont"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="42dp"
            android:background="@drawable/rectangle_shape"
            android:textSize="16dp"
            android:text="@string/read_setting_small_font"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <TextView
            android:id="@+id/setting_bigfont"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="42dp"
            android:background="@drawable/rectangle_shape"
            android:textSize="16dp"
            android:text="@string/read_setting_big_font"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:textColor="#ffffffff"
            android:layout_height="fill_parent"
            android:text="主题"
            android:textSize="18dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/setting_lower"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape"
            android:contentDescription="@string/empty"
            />

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"/>

        <View
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:textColor="#ffffffff"
            android:layout_height="fill_parent"
            android:text="版式"
            android:textSize="18dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/setting_bigheight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/circle_shape"
            android:src="@drawable/heightbig" />

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView
            android:id="@+id/setting_smallheight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/circle_shape"
            android:src="@drawable/heightsmall" />

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/circle_shape"
            android:src="@drawable/heightsmall" />

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/circle_shape"
            android:src="@drawable/heightsmall" />

        <View
            android:layout_height="match_parent"
            android:layout_width="8dp"/>

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/circle_shape"
            android:src="@drawable/heightsmall" />

        <View
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="8dp"/>

    </LinearLayout>

